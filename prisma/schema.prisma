generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  wallet Wallet?

  @@map("users")
}

model Wallet {
  id        String        @id @default(uuid())
  userId    String        @unique @map("user_id")
  balance   Decimal       @default(0.00)
  sent      Transaction[] @relation("SentTransactions")
  received  Transaction[] @relation("ReceivedTransactions")
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@map("wallets")
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REVERSED
}

model Transaction {
  id               String            @id @default(uuid())
  senderWalletId   String            @map("sender_wallet_id")
  receiverWalletId String            @map("receiver_wallet_id")
  amount           Decimal
  status           TransactionStatus @default(PENDING)
  description      String?
  createdAt        DateTime          @default(now()) @map("created_at")
  completedAt      DateTime?         @map("completed_at")

  senderWallet   Wallet @relation("SentTransactions", fields: [senderWalletId], references: [id])
  receiverWallet Wallet @relation("ReceivedTransactions", fields: [receiverWalletId], references: [id])

  @@map("transactions")
}
